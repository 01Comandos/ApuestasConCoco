/*
	MEDIA QUERIES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
@media (max-width: 1550px)
	/**********************
		INDEX
    **********************/
	header
		height 6.7em
			
		.header-contain
			.contain-one
				flex-flexStart()
				.form-search
					margin 1.3em 0 1em 0
					input
						width 94%
					
				&-option
					height 4.5em !important
					top 0 !important
					width 157px
					figure
						width 3em
						margin-top .6em
					&:before
						left -1.4em
						border-left 1.4em solid transparent
						border-bottom 4.5em solid gris-plomo2
					
				.house
					padding-right 1.5em
					right 8.5em
					
				.record
					display initial !important
					background verde-corporativo
					figure
						width 3.2em
						margin-top .6em
					.indicator
						position absolute
						width 2.4em
						height 2.4em
						top 1.1em
						right 1em
						background #4e555d
						border-radius 50%
						span
							color white
							font-size 1.5em
							font-family 'Brandon-Bold'
							display block
							text-align center
							margin-top .1em
					&:before
						border-bottom 4.5em solid verde-corporativo
		
			nav
				width 97% !important
				height 1.3em
				ul
					.nav-arrow
						background gris-plomo
						padding-left 1em
						right 1.5em !important
						
	.main
		&-body
			width calc(100% - 240px)
			
		&-ticket
			display none

	footer
		.bg-water
			width 16em
			

@media (max-width: 1500px)
	/**********************
		INDEX
    **********************/			
	.main
		&-body
			padding-bottom 3em
			flex-between()
			
			&-slideContain
				width 98%
			
			&-tableContainer
				width 48%
				margin auto
	

@media (max-width: 1170px)
		
	/**********************
		INDEX
    **********************/
					
	.main
		&-body
			width calc(100% - 240px)
			padding-bottom 3em
			display block
			
			&-tableContainer
				width 98%
				margin 0 .7em 1.2em .7em
    		
    	
	/**********************
		INDEX
    **********************/
    	
	
			
@media (max-width: 1150px)
	/**********************
		INDEX
    **********************/
	.main
		&-body
			&-slideContain
				.rslides_container
					width 100%
				.tournaments
					display none



    	
@media (max-width: 1080px)
	.grid
		width 51em
		
	/**********************
		INDEX
    **********************/
	header
		.logo
			width 200px
			
		.header-contain
			width calc(100% - 200px)
			.contain-one
				.form-search
					width calc(100% - 359px)
			
	.main
		&-menu
			display none
		
		&-body
			width 100%

	

// Large devices (desktops, 62em and up)
@media (max-width: 900px)
	.grid
		width 90%
		
	/**********************
		INDEX
    **********************/

					
	.main
		&-body
			&-slideContain
				.rslides_container
					height 18em
					/.centered-btns_nav
						display none

	footer
		.bg-water
			width 10em
	




	/**********************
		RUEDAS DE NEGOCIO
    **********************/


@media (max-width: 690px)
	body
		font-size 14px
		overflow-x scroll
		
		
	/**********************
		HEADER
    **********************/
	header
		flex-between()
		.logo
			width 178px
			a img
				width 84%
				
		.header-contain
			width 450px
			.contain-one
				.form-search
					display none
					
				.search
					background azul-search
					margin-right 20em
					display initial
					figure
						margin 1.2em auto 0 auto
						
					&:before
						left -1.4em
						border-left 1.4em solid transparent
						border-bottom 4.5em solid azul-search
						
						
				.search
				.house
				.record
					width 150px
						
			nav
				width 100%
				position relative
				top 4.4em



	/**********************
    	INDEX
    **********************/
				
		

// Small devices (landscape phones, 415px and up)
@media (max-width: 415px)
	body
		font-size 11px
		

